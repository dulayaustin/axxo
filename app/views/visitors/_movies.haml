%table.table.table-striped
  %tbody
    .row
      %tr       
        %th.col-md-4= sort_link @search, :title, "Title"
        %th.col-md-3 Genre
        %th.col-md-2= sort_link @search, :rating, "Rating", default_order: :desc
        %th.col-md-1 DL Count
        %th.col-md-2 Link
      - @movies.each do |movie|          
        %tr
          %td.title.col-md-4
            = movie.title
          %td.genre.col-md-3
            - movie.categories.each do |genre|
              = link_to genre_status(genre.name), category_visitors_path(genre.name)
          %td.rating.col-md-2
            = movie.rating
            %small / 10
          %td.download_count.col-md-1
            = movie.download_count
          %td.link.col-md-2
            = link_to "View Details and Download", display_visitors_path(movie), class: 'btn btn-primary btn-sm'

= paginate @movies
        
      
