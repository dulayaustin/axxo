.container
  .entry
    .row
      .movie_image.col-sm-12.col-md-4
        = image_tag @movie.image, class: 'img-responsive', height: "600px", width: "400px"
    
      .col-sm-12.col-md-8.content
        .title_header.row
          %h2.col-md-7= @movie.title        
          .button_torrent.col-md-4.col-md-offset-1
            = link_to "Torrent Download", @movie.torrent, class: 'btn btn-primary btn-default'
            = link_to "Back", visitors_path, class: 'btn btn-primary btn-default'
  
        .description
          %p
            %strong
              Plot:
            = @movie.plot

          %ul
            %li
              %strong
                IMDB Link:
              = link_to @movie.imdb, @movie.imdb
            %li
              %strong
                Genre: 
              - @movie.categories.each do |genre|
                = genre.name.titleize
            %li
              %strong
                Size:
              = @movie.size
            %li
              %strong
                Quality:
              = @movie.quality
            %li
              %strong
                Language:
              = @movie.language

        .embed-responsive.embed-responsive-16by9
          = embed(@movie.youtube_url)





